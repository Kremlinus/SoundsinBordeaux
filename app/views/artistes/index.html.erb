<p id="notice"><%= notice %></p>

<h1>Artistes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artistes.each do |artiste| %>
      <tr>
        <td><%= artiste.name %></td>
        <td><%= artiste.description %></td>
        <td><%= artiste.image %></td>
      </tr>
    <% end %>
  </tbody>
</table>

